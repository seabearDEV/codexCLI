{
	"name": "codexcli",
	"version": "1.0.0",
	"description": "A command-line information store for quick reference of frequently used data",
	"bin": {
		"ccli": "dist/index.js"
	},
	"files": [
		"dist",
		"bin",
		"README.md",
		"LICENSE"
	],
	"main": "dist/index.js",
	"scripts": {
		"build": "tsc && mkdir -p ~/.codexcli && cp -r dist/* ~/.codexcli/",
		"start": "node dist/index.js",
		"dev": "NODE_ENV=development ts-node src/index.ts"
	},
	"keywords": [
		"cli",
		"command-line",
		"data-store",
		"reference",
		"information"
	],
	"author": "Kory Hoopes (seabearDEV)",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/seabearDEV/codexCLI.git"
	},
	"devDependencies": {
		"@types/node": "^22.13.8",
		"ts-node": "^10.9.2",
		"tslib": "^2.8.1",
		"typescript": "^5.8.2"
	},
	"dependencies": {
		"chalk": "^4.1.2",
		"commander": "^13.1.0"
	}
}
